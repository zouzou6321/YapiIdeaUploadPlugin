<idea-plugin>
  <id>WxbYapiUpload</id>
  <name>WxbYapiUpload</name>
  <version>2.1.0</version>
  <vendor email="chenglitao521@gmail.com" url="http://www.qbb6.com">wxb</vendor>

  <description><![CDATA[
      upload api to yapi<br>
      <em>support dubbo api and api upload</em>
    ]]></description>

  <change-notes><![CDATA[
      <a href="https://github.com/zouzou6321/YapiIdeaUploadPlugin">使用方式</a> <br>
      <em>2.1.1</em><br>
      <ul>
          <li>支持spring-data的Page接口</li>
      </ul>
      <em>2.1.0</em><br>
      <ul>
          <li>Fix multiple project read yapi.xml wrong.</li>
          <li>Supports new yapi.xml formats.</li>
          <li>Merge upstream v1.8.1</li>
      </ul>
      <em>2.0.9</em><br>
      <ul>
          <li>fixbug</li>
          <li>supports enum  parameter</li>
      </ul>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="145.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <!-- Add your actions here -->
    <action id="UploadToYapi" class="com.qbb.interaction.UploadToYapi" text="UploadToYapi"
            description="UploadToYapi">
      <add-to-group group-id="EditorLangPopupMenu" anchor="first"/>
      <keyboard-shortcut keymap="$default" first-keystroke="alt u"/>
    </action>
  </actions>

  <depends>com.intellij.modules.java</depends>

</idea-plugin>